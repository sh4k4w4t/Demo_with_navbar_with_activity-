<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient_login_regi_guest_page"
    tools:context=".log_regi_guest.Guest_verification">


    <EditText
        android:id="@+id/guestMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#E6E0E0"
        android:hint="  Mobile Number"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:inputType="phone"/>

    <Button
        android:id="@+id/guest_button_login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/button_registration"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Continue As Guest"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/guest_button_Back_to_login_page"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/button_login"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>


</LinearLayout>